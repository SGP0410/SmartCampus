<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >

  <include layout="@layout/title_back_g"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="228dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:background="@mipmap/campus_card"
      android:elevation="20dp"
      />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="10dp"
      >

      <LinearLayout
        android:id="@+id/btn_expenses_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        >
        <ImageView
          android:id="@+id/img_expensesRecord"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@mipmap/expenses_record"
          />
          <TextView
          android:id="@+id/txt_expensesRecord"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="消费记录"
          android:textColor="@color/blue_title"
          android:textSize="20dp"
          android:layout_marginLeft="10dp"
          />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/btn_recharge_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <ImageView
          android:id="@+id/img_rechargeRecord"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="20dp"
          android:src="@mipmap/recharge_record_hui"
          />
        <TextView
          android:id="@+id/txt_rechargeRecord"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="充值记录"
          android:textSize="20dp"
          android:textColor="@color/color_title_2"
          android:layout_marginLeft="10dp"
          />

      </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/recyclerView"
      android:padding="5dp"
      />

  </LinearLayout>

</LinearLayout>